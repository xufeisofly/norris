<div id="comment" class="comment">
  <div class="row">
    <div class="col s2 avatar">
      <%= image_tag comment.user.avatar_url, class: "circle responsive-img" %>
    </div>

    <div id="comment-content" class="col s10">
      <p class="comment-info">
        <%= link_to comment.user.name, comment.user.html_url %> commented on <%= time_ago_in_words(comment.created_at) %> ago.
      </p>
      <%= comment.content %>
    </div>
  </div>
</div>
