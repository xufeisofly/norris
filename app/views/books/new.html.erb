<div class="container">
  <%= form_for @book, html: { class: 'col s12' } do |f| %>
    <div class="row">
      <div class="input-field col s12">
        <%= f.text_field :title, class: 'validate' %>
        <%= label_tag :title, '书名' %>
      </div>
    </div>

    <% submit = 'Submit<i class="material-icons right">send</i>'.html_safe %>
    <%= button_tag submit, type: 'submit', class: 'btn waves-effect waves-light' %>
  <% end %>
</div>
